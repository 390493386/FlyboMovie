<!DOCTYPE html>
<html>

<head>
    <title>@ViewData["Title"] - 飞播影视-test</title>
    <meta charset="utf-8" />
    <meta http-equiv="Cache-Control" content="no-siteapp" />
    <meta name="viewport" content="initial-scale=1, maximum-scale=3, minimum-scale=1, user-scalable=no" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/icon-font/iconfont.css" />
    <link rel="stylesheet" href="~/css/video-js.min.css" />
</head>

<body>
    @{
        var currnetTab = ViewData.ContainsKey("CurrentTab") ? ViewData["CurrentTab"].ToString() : null;
        var hottestClass = "";
        var latestClass = "";
        if (String.Equals(currnetTab, "HottestMovies", StringComparison.OrdinalIgnoreCase))
        {
            hottestClass = "selected";
        }
        else if (String.Equals(currnetTab, "LatestMovies", StringComparison.OrdinalIgnoreCase))
        {
            latestClass = "selected";
        }
    }
    <div id="main-content">
        <header id="header">
            <div class="logo">
                <a asp-page="/Index">
                    <span class="iconfont icon-shouye"></span>
                </a>
            </div>
            <div class="search">
                <form id="search-form" asp-page="/Index" method="get">
                    <input type="hidden" name="tab" value="@currnetTab" />
                    <input name="keywords" placeholder="请输入关键词搜索" class="search-keyword" />
                    <span class="iconfont icon-sousuo"></span>
                </form>
            </div>
        </header>

        <div id="body">
            <script src="http://apps.bdimg.com/libs/jquery/2.1.4/jquery.min.js"></script>
            @RenderBody()
        </div>

        <footer id="footer">
            <ul class="nav">
                <li class="@hottestClass">
                    <a asp-page="/HottestMovies">
                        <span class="iconfont icon-remen"></span>人气
                    </a>
                </li>
                <li class="@latestClass">
                    <a asp-page="/LatestMovies">
                        <span class="iconfont icon-zuijinbofang"></span>最新
                    </a>
                </li>
                <li>
                    <span class="iconfont icon-account"></span>我的
                </li>
            </ul>
        </footer>
    </div>
    <script>
        $(document).ready(function () {
            $("#search-form .icon-sousuo").click(function () {
                $("#search-form").submit();
            });
        });
    </script>
</body>

</html>