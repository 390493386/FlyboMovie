@page
@model MovieEditModel
@{
    ViewData["Title"] = "视频编辑";
}

<h3>编辑视频</h3>
<div class="row">
    <div class="col-md-4">
        <form id="movie-upload-form" method="post">
            <input type="hidden" asp-for="Movie.Id"/>
            <div class="form-group">
                <label asp-for="Movie.Name" class="control-label"></label>
                <input asp-for="Movie.Name" type="text" class="form-control" />
                <span asp-validation-for="Movie.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Movie.TrySeconds" class="control-label"></label>
                <input asp-for="Movie.TrySeconds" class="form-control" />
                <span asp-validation-for="Movie.TrySeconds" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-default">保存</button>
        </form>
    </div>
</div>